  </div>

  <div class="input-field col l12">
    <%= form.label :title, class: 'active' %>
    <%= form.text_field :title %>
  </div>

  <div class="input-field col l12">
    <%= form.label :subject, class: 'active' %>
    <%= form.text_field :subject %>
  </div>

  <div class="input-field col l12">
    <%= form.label :description, class: 'active' %>
    <%= form.text_field :description %>
  </div>

